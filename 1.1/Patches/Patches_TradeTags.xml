<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Weapon Tech -->
	<Operation Class="PatchOperationFindMod">
		<mods><li>Weapon Tech 1.1</li></mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- TODO: figure out which of these has/lacks trade tags contrary to these patches -->
				<li Class="PatchOperationAdd">
				  <xpath>/Defs/ThingDef[defName = "Gun_Autopistol" or defName = "Gun_ConvertedBoltActionRifle" or defName = "Gun_VintageLightMachineGun" or defName = "Gun_BoltActionRifle" or defName = "Gun_SniperRifle" or defName = "Gun_BoltActionPistol" or defName = "Gun_PumpShotgun" or defName = "Gun_VintageMachinePistol"]</xpath>
				  <value>
					<tradeTags>
					  <li>WesternWeapon</li>
					</tradeTags>
				  </value>
				</li>
				<li Class="PatchOperationAdd">
				  <xpath>/Defs/ThingDef[defName = "Gun_LeverActionRifle" or defName = "Gun_LargeLeverActionRifle" or defName = "Gun_LargeRevolver" or defName = "Gun_Revolver" or defName = "Gun_SawnOffShotgun" or defName = "Gun_DoubleBarreledShotgun" or defName = "Gun_BreechLoadingRifle"]/tradeTags</xpath>
				  <value>
					<li>WesternWeapon</li>
				  </value>
				</li>
			</operations>
		</match>
	</Operation>	
	<!-- VWE -->
	<Operation Class="PatchOperationFindMod">
		<mods><li>Vanilla Weapons Expanded</li></mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="VWE_Gun_LeverActionRifle" or defName="VWE_SawedOffShotgun"]</xpath>
					<value>
						<tradeTags>
						  <li>WesternWeapon</li>
						</tradeTags>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	<!-- Rimsenal -->
	<Operation Class="PatchOperationFindMod">
		<mods><li>Rimsenal - Enhanced Vanilla Pack</li></mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Gun_Repeater"]</xpath>
					<value>
						<tradeTags>
						  <li>WesternWeapon</li>
						</tradeTags>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>